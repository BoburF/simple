<script>
	const sum = document.querySelector('.sum')
	const price = document.querySelectorAll('.price')
	let res = 0
	price.forEach(item => {
		const pr = item.innerHTML.slice(1, item.innerHTML.length)
		res = res + +pr
	})
	sum.innerHTML = '$' + res
</script>